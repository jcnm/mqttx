{
  "name": "@sparkplug/broker",
  "version": "1.0.0",
  "description": "Sparkplug Compliant & Aware MQTT broker with Fastify REST API",
  "type": "module",
  "main": "./dist/server.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@sparkplug/codec": "workspace:*",
    "@sparkplug/namespace": "workspace:*",
    "@sparkplug/state": "workspace:*",
    "fastify": "^5.1.0",
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/rate-limit": "^10.1.1",
    "@fastify/websocket": "^11.0.1",
    "aedes": "^0.51.3",
    "aedes-persistence-redis": "^11.0.0",
    "mqtt": "^5.10.1",
    "ws": "^8.18.0",
    "ioredis": "^5.4.1",
    "better-sqlite3": "^11.7.0",
    "yaml": "^2.6.1",
    "ajv": "^8.17.1",
    "pino": "^9.5.0",
    "pino-pretty": "^13.1.0",
    "@opentelemetry/sdk-node": "^0.54.0",
    "@opentelemetry/auto-instrumentations-node": "^0.50.0",
    "@opentelemetry/exporter-prometheus": "^0.54.0",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/ws": "^8.5.13",
    "@types/better-sqlite3": "^7.6.12",
    "typescript": "^5.7.2",
    "tsx": "^4.19.2",
    "vitest": "^3.0.5"
  }
}
