{
  "name": "@sparkplug/scada-core",
  "version": "1.0.0",
  "description": "Primary Host Application / SCADA core logic for Sparkplug",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -p tsconfig.json --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@sparkplug/codec": "workspace:*",
    "@sparkplug/namespace": "workspace:*",
    "@sparkplug/state": "workspace:*",
    "mqtt": "^5.10.1",
    "ioredis": "^5.4.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.9"
  }
}
