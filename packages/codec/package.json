{
  "name": "@sparkplug/codec",
  "version": "1.0.0",
  "description": "Sparkplug B Protocol Buffers encoder/decoder with full ISO/IEC 20237:2023 support",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -p tsconfig.json --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "protobufjs": "^7.4.0",
    "@bufbuild/protobuf": "^2.2.2",
    "pako": "^2.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/pako": "^2.0.3",
    "typescript": "^5.7.2",
    "vitest": "^3.0.5"
  }
}
