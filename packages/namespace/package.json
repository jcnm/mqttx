{
  "name": "@sparkplug/namespace",
  "version": "1.0.0",
  "description": "Sparkplug topic namespace parser, builder, and validator",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
